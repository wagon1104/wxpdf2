<view class="page">   

    <view class="page__bd">        
        <view class="weui-panel weui-panel_access">           
            <view class="weui-panel__bd" wx:for="{{newList}}" wx:for-item="item">
                <navigator url="detail?id={{item.id}}&type={{item.type}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.firstImg}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{item.title}}</view>
                        <view class="weui-media-box__desc">{{item.desc}}</view>
                    </view>                    
                </navigator>               
            </view>            
        </view>             
    </view>    
</view>