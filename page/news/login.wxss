.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 70rpx 0 0 0;
  box-sizing: border-box;
}
.container {
  opacity: 0.75;
  background-color:#D81E06;
}

.bgImg {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
}

.logo {
  width: 300rpx;
  height: 300rpx;
}

.signTitle {
  color: #fff;
  display: flex;
  margin: 80rpx 0 30rpx 0;
}

.whiteLine {
  height: 5rpx;
  background-color: #fff;
  width: 40%;
  border-radius: 20rpx;
}

input {
  color: #fff;
  width: 60%;
  /* height: 150rpx; */
  border: 3rpx #fff solid;
  border-radius: 10rpx;
  margin-top: 50rpx;
  padding: 5px 15px;
}

.ph {
  color: #eee;
}

.numWaring {
  position: fixed;
  right: 50rpx;
  top: 585rpx;
}

.psdWaring {
  position: fixed;
  right: 50rpx;
  top: 715rpx;
}

.num-true {
  display: inherit;
}
.num-false {
  display: none;
}
.psd-true {
  display: inherit;
}
.psd-false {
  display: none;
}

.loginBtn {
  width: 68%;
  /* height: 90rpx; */
  margin-top: 50rpx;
  border: 5rpx #fff solid!important;
  color: #fff!important;
}

.btnHover {
  opacity: 0.5;
  background-color: #eee;

}

.newAlert {
  padding: 15rpx 30rpx;
  display: block;
  text-align: center;
}

.info {
  color: #fff;
  font-size: 25rpx;
  margin-top: 50rpx;
  text-decoration: underline;
}

.footer {
  display: flex;
  position: fixed;
  color: #fff!important;
  bottom: 10rpx;
  font-size: 22rpx;
}